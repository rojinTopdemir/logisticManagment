@model List<FiberKargo.Models.Feedback>
@{
    ViewBag.Title = "Müşteri Yorumları";
    ViewBag.ActivePage = "Feedbacks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4"><i class="bi bi-chat-dots me-2"></i>Müşteri Yorumları</h2>

<div class="row g-4">
    @foreach (var feedback in Model)
    {
        <div class="col-md-6">
            <div class="card p-4">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-0"><i class="bi bi-person-circle me-2"></i>@feedback.Name</h6>
                        <small class="text-muted">@feedback.Branch Şubesi</small>
                    </div>
                    <div>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= feedback.Rating)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-warning"></i>
                            }
                        }
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(feedback.Comment))
                {
                    <p class="mb-2">@feedback.Comment</p>
                }
                <small class="text-muted">
                    <i class="bi bi-clock me-1"></i>@feedback.CreateTime.ToString("dd.MM.yyyy HH:mm")
                </small>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="card p-5 text-center text-muted">
        <i class="bi bi-inbox display-4"></i>
        <p class="mt-3">Henüz müşteri yorumu bulunmamaktadır.</p>
    </div>
}
