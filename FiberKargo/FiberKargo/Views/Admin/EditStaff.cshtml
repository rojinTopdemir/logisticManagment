@model FiberKargo.Models.User
@{
    ViewBag.Title = "Personel Düzenle";
    ViewBag.ActivePage = "Staff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var branches = new[] { "Adana", "Ankara", "İstanbul", "İzmir", "Bursa" };
}

<h2 class="mb-4"><i class="bi bi-pencil me-2"></i>Personel Düzenle</h2>

<div class="card p-4" style="max-width: 600px;">
    @using (Html.BeginForm("EditStaff", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Username)
        @Html.HiddenFor(m => m.Role)

        <div class="mb-3">
            <label class="form-label">Kullanıcı Adı</label>
            <input type="text" class="form-control" value="@Model.Username" disabled>
        </div>

        <div class="mb-3">
            <label class="form-label">Ad Soyad</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
        </div>

        <div class="mb-3">
            <label class="form-label">Yeni Şifre</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
            <small class="text-muted">En az 8 karakter, 1 büyük harf, 1 küçük harf</small>
        </div>

        <div class="mb-3">
            <label class="form-label">Şube</label>
            @Html.DropDownListFor(m => m.Branch,
                new SelectList(branches, Model.Branch),
                new { @class = "form-select", required = "required" })
            @Html.ValidationMessageFor(m => m.Branch, "", new { @class = "text-danger small" })
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg me-2"></i>Güncelle
            </button>
            <a href="@Url.Action("Staff", "Admin")" class="btn btn-secondary">
                <i class="bi bi-x-lg me-2"></i>İptal
            </a>
        </div>
    }
</div>
