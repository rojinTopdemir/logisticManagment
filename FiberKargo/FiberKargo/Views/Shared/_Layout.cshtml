<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fiber Kargo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ff5fa2; /* Soft barbie pembe */
            --secondary-color: #ff8ccf; /* Açık pastel pembe */
            --accent-color: #ffe1f0; /* Pudra pembesi */
            --light-color: #fff7fb; /* Çok açık pembe arka plan */
            --dark-color: #d63384; /* Dengeli koyu pembe */
        }

        body {
            background-color: var(--light-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 80px 0;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

            .btn-primary:hover {
                background-color: #c32a37;
                border-color: #c32a37;
            }

        .card {
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .section-title {
            color: var(--secondary-color);
            position: relative;
            padding-bottom: 10px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                left: 0;
                bottom: 0;
                width: 50px;
                height: 3px;
                background-color: var(--primary-color);
            }

        footer {
            background-color: var(--secondary-color);
            color: white;
        }

        .branch-card {
            background: linear-gradient(135deg, #fff, var(--accent-color));
        }

        .feature-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
        }

        .captcha-display {
            font-family: 'Courier New', monospace;
            font-size: 24px;
            font-weight: bold;
            background: linear-gradient(to right, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 4px;
            user-select: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <i class="bi bi-box-seam me-2"></i>
                <span class="fw-bold">Fiber Kargo</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="bi bi-house me-1"></i>Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#track"><i class="bi bi-search me-1"></i>Kargo Takip</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#calculator"><i class="bi bi-calculator me-1"></i>Fiyat Hesapla</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#branches"><i class="bi bi-geo-alt me-1"></i>Şubelerimiz</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Account")"><i class="bi bi-box-arrow-in-right me-1"></i>Giriş</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5><i class="bi bi-box-seam me-2"></i>Fiber Kargo</h5>
                    <p class="small">Türkiye'nin güvenilir kargo firması. Hızlı, güvenli ve ekonomik kargo hizmeti.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>İletişim</h5>
                    <p class="small"><i class="bi bi-telephone me-2"></i>0850 XXX XX XX</p>
                    <p class="small"><i class="bi bi-envelope me-2"></i>info@fiberkargo.com</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h5>Takip Edin</h5>
                    <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-twitter-x fs-4"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-instagram fs-4"></i></a>
                </div>
            </div>
            <hr class="my-4">
            <p class="text-center small mb-0">&copy; @DateTime.Now.Year Fiber Kargo. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
