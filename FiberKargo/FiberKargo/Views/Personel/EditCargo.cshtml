@model FiberKargo.Models.Cargo
@{
    ViewBag.Title = "Kargo Düzenle";
    ViewBag.ActivePage = "TrackCargos";
    Layout = "~/Views/Shared/_PersonelLayout.cshtml";
}

<h2 class="mb-4"><i class="bi bi-pencil me-2"></i>Kargo Düzenle</h2>

<div class="card p-4" style="max-width: 600px;">
    @using (Html.BeginForm("EditCargo", "Personel", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            <label class="form-label">Kargo No</label>
            <input type="text" class="form-control" value="@Model.CargoNo" disabled>
        </div>

        <div class="mb-3">
            <label class="form-label">Alıcı Adı</label>
            @Html.TextBoxFor(m => m.ReceiverName, new { @class = "form-control", required = "required" })
        </div>

        <div class="mb-3">
            <label class="form-label">Alıcı Telefonu</label>
            <div class="input-group">
                <span class="input-group-text">+90</span>
                @Html.TextBoxFor(m => m.ReceiverTel, new
                {
                    @class = "form-control",
                    maxlength = "10",
                    required = "required"
                })
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">İçerik</label>
            @Html.TextBoxFor(m => m.Content, new { @class = "form-control", required = "required" })
        </div>

        <div class="mb-3">
            <label class="form-label">Ağırlık (kg)</label>
            <input type="number" 
                   name="Weight" 
                   class="form-control" 
                   step="0.1" 
                   required="required"
                   value="@Model.Weight.ToString(System.Globalization.CultureInfo.InvariantCulture)" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg me-2"></i>Güncelle
            </button>
            <a href="@Url.Action("TrackCargos", "Personel")" class="btn btn-secondary">
                <i class="bi bi-x-lg me-2"></i>İptal
            </a>
        </div>
    }
</div>
